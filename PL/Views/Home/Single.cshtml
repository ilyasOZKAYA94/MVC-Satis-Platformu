@model Entity.ViewModel.SingleViewModel

@{
    ViewBag.Title = "Single";
}

<div class="container">
    <div class="products-page">
        <div class="products">
            <div class="product-listy">
                <h2>our Products</h2>
                <ul class="product-list">
                    <li><a href="">New Products</a></li>
                    <li><a href="">Old Products</a></li>
                    <li><a href="">T-shirts</a></li>
                    <li><a href="">pants</a></li>
                    <li><a href="">Dress</a></li>
                    <li><a href="">Shorts</a></li>
                    <li><a href="#">Shirts</a></li>
                    <li><a href="register.html">Register</a></li>
                </ul>
            </div>
            <div class="tags">
                <h4 class="tag_head">Tags Widget</h4>
                <ul class="tags_links">
                    <li><a href="#">Kitesurf</a></li>
                    <li><a href="#">Super</a></li>
                    <li><a href="#">Duper</a></li>
                    <li><a href="#">Theme</a></li>
                    <li><a href="#">Men</a></li>
                    <li><a href="#">Women</a></li>
                    <li><a href="#">Equipment</a></li>
                    <li><a href="#">Best</a></li>
                    <li><a href="#">Accessories</a></li>
                    <li><a href="#">Men</a></li>
                    <li><a href="#">Apparel</a></li>
                    <li><a href="#">Super</a></li>
                    <li><a href="#">Duper</a></li>
                    <li><a href="#">Theme</a></li>
                    <li><a href="#">Responsive</a></li>
                    <li><a href="#">Women</a></li>
                    <li><a href="#">Equipment</a></li>
                </ul>

            </div>

        </div>
        <div class="new-product">
            <div class="col-md-5 zoom-grid">
                <div class="flexslider">
                    <ul class="slides">
                        <li data-thumb="/images/@Model.Image1">
                            <div class="thumb-image"> <img src="/images/@Model.Image1" data-imagezoom="true" class="img-responsive" alt="" /> </div>
                        </li>
                        <li data-thumb="/images/@Model.Image2">
                            <div class="thumb-image"> <img src="/images/@Model.Image2" data-imagezoom="true" class="img-responsive" alt="" /> </div>
                        </li>
                        <li data-thumb="/images/@Model.Image3">
                            <div class="thumb-image"> <img src="/images/@Model.Image3" data-imagezoom="true" class="img-responsive" alt="" /> </div>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-md-7 dress-info">
                <div class="dress-name">
                    <h3>@Model.ProductName</h3>
                    <span> @Model.Price ₺ </span>
                    <div class="clearfix"></div>
                    <hr /><strong><u>Açıklama</u></strong><br /><hr style="color:slategray" />
                    @Html.Raw(Model.Description)
                </div>
                <div class="span span1">
                    <p class="left"><u>Renk</u></p>
                    <p class="right">@Model.Color</p>
                    <div class="clearfix"></div>
                </div>
                <div class="span span2">
                    <p class="left"><u>Garansi Varmı ?</u></p>
                    <p class="right">

                        @if(Model.Warranty==false)
                        {
                        <b>Hayır</b>
                        }
                        else
                        {
                        <b>Evet</b> 
                        }
                     
                    </p>
                    <div class="clearfix"></div>
                </div>
                <div class="span span3">
                    <p class="left"><u>İlan Sahibi</u></p>
                    <p class="right">@Model.SellerUserName</p>
                    <div class="clearfix"></div>
                </div>
                <div class="span span4">
                    <p class="left"><u>Görüntülenme</u></p>
                    <p class="left">@Model.Views</p>
                    <div class="clearfix"></div>
                </div>
                <div class="span span4">
                    <p class="left"><u>Yayın Tarihi</u></p>
                    <p class="left">@Model.CreateDate.ToShortDateString()</p>
                    <div class="clearfix"></div>
                </div>
                <a class="btn btn-success" data-toggle="modal" data-target=".bootstrapmodal" style="float:right" id="msgStart">Mesaj Gönder</a>
                <input type="text" value="@Model.SellerUserName" id="sellername" hidden />

                <script src="/js/imagezoom.js"></script>
                <!-- FlexSlider -->
                <script defer src="/js/jquery.flexslider.js"></script>
                <script>
                    // Can also be used with $(document).ready()
                    $(window).load(function () {
                        $('.flexslider').flexslider({
                            animation: "slide",
                            controlNav: "thumbnails"
                        });
                    });
                </script>
            </div>
            <div class="clearfix"></div>            
        </div>       
        <div class="clearfix"></div>
    </div>
</div>
<div class="other-products products-grid">
</div>
<!-- content-section-ends -->
